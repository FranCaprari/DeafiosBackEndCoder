<html>
{{> head}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">

      <li class="nav-item">
        <a class="nav-link" href="/">Ingresar producto</a>
      </li>

      <li class="nav-item ">
        <a class="nav-link" href="/">Ver productos</a>
      </li>

    </ul>

  </div>
</nav>
<body>
    <div class="container">
        <main>
            
            <form class="form-signin" onsubmit="return enviarProducto(this)">

                <h1 class="h3 mb-3 font-weight-normal">Agregar productos a la lista</h1>

                <label for="title" class="sr-only">Nombre</label>
                <input type="text" id="title" class="form-control" placeholder="Producto" required autofocus name="title"/>

                <label for="precio" class="sr-only">Precio</label>
                <input type="number" id="precio" class="form-control" placeholder="Precio" required name="precio"/>
            
                <label for="thumbnail" class="sr-only">Imagen</label>
                <input type="thumbnail" id="thumbnail" class="form-control" placeholder="Url de la imagen" required name="thumbnail"/>
            
                <button class="btn btn-lg btn-primary btn-block btnProducto" type="submit">Enviar</button>
            </form>

            <div class="bg-dark mx-6 py-6">
                {{#if compras}}
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Producto</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Imagen</th>
                        </tr>
                    </thead>
                    <tbody id="lista-productos"></tbody>
                </table>
                {{else}}
                <h1 class="text-center" style="color: white; border-style: solid">No hay productos para mostrar</h1>
                {{/if}}
            </div>


    
            <div class="card-body" data-mdb-perfect-scrollbar="true" style=" height: 400px; overflow-y:scroll;" id="mensajes-chat"></div>


            <form onsubmit="return enviarMensaje(this)" >
                <div class="chat-message clearfix">
                    <div class="input-group mb-0">
                                <input id="email" type="email" class="form-control mensajeinput" required placeholder="Email" />
                                <input id="chat_mensaje" type="text" class="form-control mensajeinput" placeholder="Mensaje..." />
                        <input id="enviar_msj" type="submit" class="form-control btnMensaje" placeholder="Enviar" />
                    </div>
                </div>
            </form>
            
        </main>
    </div>

<script src="/socket.io/socket.io.js"></script>
  <script src="../layouts/index.js"></script>    
</body>


</html>